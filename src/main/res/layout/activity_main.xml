<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back" />

    <EditText
        android:id="@+id/etBookID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Book ID"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/rectangle_bg"
        android:paddingStart="8dp"
        android:fontFamily="@font/my_font"
        android:layout_marginTop="50dp" />

    <!-- Book Title EditText -->
    <EditText
        android:id="@+id/etBookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etBookID"
        android:layout_marginTop="16dp"
        android:hint="Enter Book Title"
        android:paddingStart="8dp"
        android:fontFamily="@font/my_font"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/rectangle_bg" />

    <!-- Author EditText -->
    <EditText
        android:id="@+id/etAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etBookTitle"
        android:layout_marginTop="16dp"
        android:hint="Enter Author"
        android:textColorHint="#FFFFFF"
        android:fontFamily="@font/my_font"
        android:paddingStart="8dp"
        android:background="@drawable/rectangle_bg" />

    <!-- Publisher EditText -->
    <EditText
        android:id="@+id/etPublisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAuthor"
        android:layout_marginTop="16dp"
        android:hint="Enter Publisher"
        android:textColorHint="#FFFFFF"
        android:fontFamily="@font/my_font"
        android:paddingStart="8dp"
        android:background="@drawable/rectangle_bg" />

    <!-- Category EditText -->
    <EditText
        android:id="@+id/etCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPublisher"
        android:layout_marginTop="16dp"
        android:hint="Enter Category"
        android:textColorHint="#FFFFFF"
        android:fontFamily="@font/my_font"
        android:paddingStart="8dp"
        android:background="@drawable/rectangle_bg" />

    <!-- Add Button -->
    <Button
        android:id="@+id/btnAddBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCategory"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/my_font"
        android:text="Add Book"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <ListView
        android:id="@+id/listViewBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddBook"
        android:layout_marginTop="16dp" />

</RelativeLayout>