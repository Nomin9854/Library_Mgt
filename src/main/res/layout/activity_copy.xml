<!-- res/layout/activity_manage_copy.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back" />

    <!-- CopyID EditText -->
    <EditText
        android:id="@+id/etCopyID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="16dp"
        android:hint="Enter Copy ID"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/rectangle_bg"
        android:paddingStart="8dp"
        android:fontFamily="@font/my_font" />

    <!-- Book Name EditText -->
    <EditText
        android:id="@+id/etBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCopyID"
        android:layout_marginTop="16dp"
        android:hint="Enter Book Name"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/rectangle_bg"
        android:paddingStart="8dp"
        android:fontFamily="@font/my_font" />

    <!-- Publisher EditText -->
    <EditText
        android:id="@+id/etPublisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etBookName"
        android:layout_marginTop="16dp"
        android:hint="Enter Publisher"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/rectangle_bg"
        android:paddingStart="8dp"
        android:fontFamily="@font/my_font" />

    <!-- Date EditText -->
    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPublisher"
        android:layout_marginTop="16dp"
        android:hint="Enter Date"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/rectangle_bg"
        android:paddingStart="8dp"
        android:fontFamily="@font/my_font" />

    <!-- Number of Copies EditText -->
    <EditText
        android:id="@+id/etNumCopies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etDate"
        android:layout_marginTop="16dp"
        android:hint="Enter Number of Copies"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/rectangle_bg"
        android:paddingStart="8dp"
        android:fontFamily="@font/my_font" />

    <!-- Add Copy Button -->
    <Button
        android:id="@+id/btnAddCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNumCopies"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/my_font"
        android:text="Add Copy"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <!-- ListView to display copies -->
    <ListView
        android:id="@+id/listViewCopies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddCopy"
        android:layout_marginTop="16dp" />

</RelativeLayout>
